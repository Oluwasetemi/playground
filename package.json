{
  "name": "code-playground",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "description": "A robust code playground using WebContainers API",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp"
  },
  "devDependencies": {
    "@setemiojo/eslint-config": "^6.2.0",
    "@types/node": "^20.19.25",
    "bumpp": "^10.3.2",
    "eslint": "^9.38.0",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  }
}
